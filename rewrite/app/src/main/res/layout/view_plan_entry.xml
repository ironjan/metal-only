<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgMod"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/metalhead" />

    <TextView
        android:id="@+id/txtModerator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMod"
        app:layout_constraintTop_toTopOf="@+id/imgMod"
        app:layout_constraintBottom_toTopOf="@id/txtShow"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="Metal Head" />

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMod"
        app:layout_constraintTop_toBottomOf="@+id/txtModerator"
        app:layout_constraintBottom_toTopOf="@id/txtGenre"
        tools:text="Keine Grüsse und Wünsche möglich" />

    <TextView
        android:id="@+id/txtGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imgMod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMod"
        app:layout_constraintTop_toBottomOf="@+id/txtShow"
        tools:text="Mixed Metal" />

</androidx.constraintlayout.widget.ConstraintLayout>
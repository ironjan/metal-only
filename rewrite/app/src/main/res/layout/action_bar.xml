<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtAbLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metalmania_regular"
        android:text="Metal Only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAbModerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metalmania_regular"
        app:layout_constraintStart_toEndOf="@+id/txtAbLoading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Metal Head" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAbIs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtAbModerator"
        android:fontFamily="@font/metalmania_regular"
        android:text=" IST "/>
    <TextView android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtAbOnAir"
        app:layout_constraintStart_toEndOf="@+id/txtAbIs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/metalmania_regular"
        android:text="ON AIR"
        android:textColor="@color/brightGreen"
        />
</androidx.constraintlayout.widget.ConstraintLayout>